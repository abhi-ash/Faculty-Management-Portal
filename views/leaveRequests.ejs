
<%- include("partials/header1"); -%>
    <h2 class="headertekst">Pending Leave Requests</h2>
    <table class="content-table center">
    <thead>    
        <tr>
            <th>Leave Id</th>
            <th>Applicant Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Leave Reason</th>
        </tr>
    </thead>
    <tbody>
        <% leaves.forEach(function(leave){ %>
            <tr>
                <td><%= leave.leaveReqId %> </td>
                <td> <%= leave.fullName %> </td>
                <td><%= leave.startDate %> </td>
                <td> <%= leave.endDate %> </td>
                <td><%= leave.status %> </td>
                <td> <%= leave.reason %> </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <h2 class="headertekst">Comments on Ongoing Leave Applications </h2>
    <table class="content-table center">
    <thead>    
        <tr>
            <th>Leave Id</th>
            <th>Comment By</th>
            <th>Comment</th>
            <th>Comment Time</th>
            <th>Position</th>
            <th>Status</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>    
        <% comments.forEach(function(cmnt){ %>
            <tr>
                <td><%= cmnt.leaveId %> </td>
                <td> <%= cmnt.commentBy %> </td>
                <td><%= cmnt.comment %> </td>
                <td><%= cmnt.commentTime %> </td>
                <td><%= cmnt.position %> </td>
                <td><%= cmnt.status %> </td>
                <td><%= cmnt.department %> </td>
            </tr>
        <% }) %>
    </tbody>
    </table>
    <% if( leaveCount !=='0'){ %> 
    <form class="submission-form" action="/leaveRequests" method="post">
        <div>
            <label>Leave Id</label>
            <input type="number" name=leaveId>
        </div>
        <div>
            <label>Comment</label>
            <input type="text" name="comment">
        </div>
        <div>
            <label for="exampleFormControlSelect1">Status</label>
            <select class="form-control" id="exampleFormControlSelect1" type="text" name="status">
              <option>Accepted</option>
              <option>Rejected</option>
              <option>Hold</option>
            </select>
        </div>
          <button class="w-100 btn btn-lg btn-primary" type="submit" name="button">Submit</button>
    </form>
    <% } %>
<%- include("partials/footer"); -%>